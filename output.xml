						<l met="+++--" real="++-+-" rhyme="a">
							移舟泊烟
							<rhyme>渚</rhyme>
						</l>
						<l met="---++" rhyme="b">
							日暮客愁
							<rhyme>新</rhyme>
						</l>
						<l met="--++-" rhyme="c">
							野旷天低
							<rhyme>树</rhyme>
						</l>
						<l met="++--+" rhyme="b">
							江清月近
							<rhyme>人</rhyme>
						</l>
					</lg>
					<signed>孟浩然</signed>
				</lg>
				<lg type="poem">
					<head>
						<title>终南望馀雪</title>
					</head>
					<lg rhyme="abcb" type="五绝平起首句不入韵">
						<l met="+++--" rhyme="a">
							终南阴岭
							<rhyme>秀</rhyme>
						</l>
						<l met="---++" real="--+++" rhyme="b">
							积雪浮云
							<rhyme>端</rhyme>
						</l>
						<l met="--++-" real="+-+--" rhyme="c">
							林表明霁
							<rhyme>色</rhyme>
						</l>
						<l met="++--+" real="+++-+" rhyme="b">
							城中增暮
							<rhyme>寒</rhyme>
						</l>
					</lg>
					<signed>祖咏</signed>
				</lg>
				<lg type="poem">
					<head>
